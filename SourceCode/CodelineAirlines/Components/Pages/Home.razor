<MudContainer Class="trending-section">
    <MudStack Direction="Row" JustifyContent="SpaceBetween">
        <!-- Title -->
        <MudText Typo="Typo.h5" Class="trending-title">
            Trending destinations
        </MudText>
        <!-- Divider -->
        <MudDivider Class="blue-line" />
    </MudStack>
</MudContainer>


