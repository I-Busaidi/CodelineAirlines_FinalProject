    width: 100%;
    height: 500px;
    object-fit: cover;
    display: block;
}

/* Fade out bottom portion of the image */
.carousel-item-content::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 20%;
    background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, #ffffff 100%);
    pointer-events: none;
}

