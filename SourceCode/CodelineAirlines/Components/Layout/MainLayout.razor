@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout >
    <MudAppBar Elevation="0" Style="background-color: transparent; position: fixed; z-index: 10;">
        <MudContainer Style="display: flex; background-color: rgba(0, 0, 0, 0.4); border-radius: 5px; backdrop-filter:blur(5px); justify-items: center; align-items: center; height: 60px;">
            <a href="/"><MudImage Src="codeline-airlines-logo-no_background.png" Style="height: 55px; width: 75px; background-color:rgba(255, 255, 255, 0.09); border-radius: 10px"></MudImage></a>
            <MudText Typo="Typo.h5" Class="ml-3" Color="Color.Default" Style="font-family: Consolas;">CODELINE AIRLINES</MudText>
            <MudSpacer />
            <MudButtonGroup Variant="Variant.Text" Style="justify-content: space-evenly">

                <MudButton Href="/bookings" Style="color: white; background-color: rgba(255, 255, 255, 0.09)"><MudIcon Icon="@Icons.Material.Outlined.AirplaneTicket"></MudIcon> &nbsp; Bookings</MudButton>
                <MudButton Href="/Profile" Style="color: white; background-color: rgba(255, 255, 255, 0.09)"><MudIcon Icon="@Icons.Material.Outlined.AccountCircle"></MudIcon> &nbsp; Profile</MudButton>
                
                <MudSpacer />
                <MudButton Href="/signup" Style="color: white; background-color: rgba(255, 255, 255, 0.09)"><MudIcon Icon="@Icons.Material.Outlined.PersonAddAlt"></MudIcon> &nbsp; Sign-Up</MudButton>
                <MudButton Href="/signin" Style="color: white; background-color: rgba(255, 255, 255, 0.09)"><MudIcon Icon="@Icons.Material.Outlined.Login"></MudIcon> &nbsp; Log-In </MudButton>
                
            </MudButtonGroup>
            
        </MudContainer>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
